<section class="cart py-16">
    <% if(session.cart) {%>
    <div class="order container px-16 mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
           <div class="flex items-center my-8">
               <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
               <div class="flex-1 ml-4">
                   <h1><%= pizza.item.name%></h1>
                   <span><%= pizza.item.size%></span>
               </div>
               <span class="flex-1"><%= pizza.qty%></span>
               <span class="font-bold text-lg">Rs<%= pizza.item.price *pizza.qty %></span>
           </div>
       
        <% } %>
         <hr>
         <div class="text-right py-4">
             <div>
                 <span class="text-lg font-bold">Total Amount :</span>
                 <span class="amount text-2xl ml-2 font-bold">Rs<%= session.cart.totalPrice%></span>
             </div>
         </div>
             <div>
                 <form action="" class="mt-12">
                   <input class="border border-gray p-2 w-1/2 mb-4" type="text" placeholder="phone number">
                   <input class="border border-gray p-2 w-1/2" type="text" placeholder="Address">
                   <div>
                       <button class="btn-primary px-6 py-2 rounded-full text-white mt-6 font-bold" type="Submit">Order Now</button>
                   </div>
                 </form>
             </div>
             <!-- <a href="" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full text-white mt-6 font-bold">Login to Continue</a> -->
         </div>
    </div>
    <% }else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Card Empty</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered food yet.<br>To order a food,go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white mt-12">Go back</a>
        </div>
    </div>
    <% } %>
</section>